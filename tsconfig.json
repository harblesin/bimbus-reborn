{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "strict": false
  },
  "include": [
    "src/**/*",
    "declaration.d.ts"
  ],
  "exclude": [
    "./bot/tests/",
    "./node_modules/",
    "./dist/",
    "./distApp",
    "./app",
    "./.db",
    "./.env"
  ]
}